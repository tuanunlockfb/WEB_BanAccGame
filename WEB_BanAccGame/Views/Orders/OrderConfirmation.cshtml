@model WEB_BanAccGame.Models.Order
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<div class="text-center py-5">
    <i class="bi bi-check-circle text-success display-1"></i>
    <h2 class="mt-3">Đặt hàng thành công!</h2>
    <p class="lead">Cảm ơn bạn đã tin tưởng và mua hàng tại GameStore.</p>
    
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h5 class="card-title">Thông tin đơn hàng</h5>
            <dl class="row">
                <dt class="col-sm-4">Mã đơn hàng:</dt>
                <dd class="col-sm-8"><strong>@Model.OrderCode</strong></dd>
                
                <dt class="col-sm-4">Ngày đặt:</dt>
                <dd class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>
                
                <dt class="col-sm-4">Tổng tiền:</dt>
                <dd class="col-sm-8 text-primary h5">@Model.TotalAmount.ToString("N0") ₫</dd>
                
                <dt class="col-sm-4">Trạng thái:</dt>
                <dd class="col-sm-8"><span class="badge bg-warning">Đang xử lý</span></dd>
            </dl>
            
            <hr>
            
            <h6>Chi tiết đơn hàng:</h6>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>SL</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td>@detail.GameAccount?.Title</td>
                                <td>@detail.Quantity</td>
                                <td>@detail.Price.ToString("N0") ₫</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle"></i> 
                Thông tin tài khoản game sẽ được gửi qua email của bạn trong vòng 5-10 phút.
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-bag-check"></i> Xem đơn hàng của tôi
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-house"></i> Về trang chủ
        </a>
    </div>
</div> 